@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model bit285_assignment3_api.Models.User
@{
    Layout = "_Layout";
}
<h1>New Account Created</h1>
<fieldset>
    <form asp-action="ConfirmAccount">
        <div>
            <label asp-for="FirstName"></label>
            <span>@Model.FirstName</span>
        </div>
        <div>
            <label asp-for="LastName"></label>
            <span>@Model.LastName</span>
        </div>
        <div>
            <label asp-for="Program"></label>
            <span>@Model.Program</span>
        </div>
        <div>
            <label asp-for="EmailAddress">Username</label>
            <span>@Model.EmailAddress</span>
        </div>
        <div>
            <label asp-for="Password"></label>
            <span>@Model.Password</span>
        </div>
    </form>
</fieldset>
<a asp-controller="Login" asp-action="Index" asp-route-id="@Model.Id">Login</a>